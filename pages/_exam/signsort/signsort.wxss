.sort {
    background: #f2f2f2;
    font-size: 30rpx;
    color: #1e99ed;
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 22rpx;
}

.srotlist {
    background: #fff;
    width: 42.5%;
    border-radius: 10px;
    margin-top: 22rpx;
    margin-left: 5%;
}

.srotlist view {
    width: 100%;
    display: flex;
    justify-content: center;
}

.srotlist image {
    width: 280rpx;
    height: 240rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}

.srotlist .text {
    padding: 18rpx 0;
    border-top: 1px solid #dddddd;
    text-align: center;
}

page {
    border-top: 1px solid #dcdee0;
}