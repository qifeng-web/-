.container {
  background: #f5f6f7;
  font-size: 0;
}

video {
  width: 100%;
  height: 380rpx;
  position: relative;
}

.center-play-btn {
  display: block;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0.7;
  height: 80rpx;
}

.center-play-btn .img {
  width: 80rpx;
  height: 80rpx;
  margin: auto;
}

.controls {
  position: absolute;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  display: block;
  background: rgba(0,0,0,0.5);
  color: #fff;
  line-height: 80rpx;
  font-size: 0;
}

.controls .img {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin: auto;
  vertical-align: middle;
  margin-left: 22rpx;
}

.bar {
  width: 484rpx;
  height: 4rpx;
  background: rgba(255,255,255,0.5);
  display: inline-block;
  vertical-align: middle;
  margin-left: 16rpx;
  overflow: hidden;
  position: relative;
}

.proceed {
  width: 200rpx;
  height: 4rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #21a4f5;
}

.progress_dot {
  position: absolute;
  width: 25rpx;
  height: 25rpx;
  top: 0;
  bottom: 0;
  left: 272rpx;
  margin: auto;
}

.time {
  display: inline-block;
  font-size: 22rpx;
  color: #fff;
  vertical-align: middle;
  margin-left: 16rpx;
}

.correlation-content {
  padding: 30rpx 0 30rpx 24rpx;
  border-bottom: 1px solid #d9d9d9;
  background: #fff;
}

.video-title {
  font-size: 30rpx;
  line-height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.official::before {
  content: '新规';
  width: 60rpx;
  height: 30rpx;
  border-bottom-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  background: linear-gradient(131deg,#3ec2fe,#07a9f2);
  color: #fff;
  display: inline-block;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  vertical-align: top;
  margin-right: 14rpx;
}

.share-btn {
  display: inline;
  font-size: 0;
  position: static;
}

.share {
  float: right;
  width: 34rpx;
  height: 34rpx;
  margin-right: 46rpx;
  margin-top: -2rpx;
}

.clip-list {
  margin-top: 38rpx;
  white-space: nowrap;
}

.clip-item {
  display: inline-block;
  vertical-align: middle;
  position: relative;
}

.clip-item+.clip-item {
  margin-left: 20rpx;
}

.playing::after {
  content: "播放中";
  display: inline-block;
  width: 84rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  font-size: 22rpx;
  background: #0090f3;
}

.clip-item image {
  width: 200rpx;
  height: 130rpx;
}

.clip-title {
  font-size: 28rpx;
  line-height: 60rpx;
}

.mj {
  margin-top: 22rpx;
  background: #fff;
  color: #414141;
}

.mj-title {
  line-height: 70rpx;
  height: 70rpx;
  font-size: 28rpx;
  padding-left: 24rpx;
  border-bottom: 1px solid #d9d9d9;
}

.mj-list {
  padding-left: 24rpx;
}

.mj-item {
  padding: 28rpx 24rpx 28rpx 0;
  border-bottom: 1px solid #d9d9d9;
}

.mj-item-content {
  word-wrap: break-word;
  font-size: 30rpx;
  line-height: 50rpx;
}

.mj-item-content text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.author {
  margin-top: 22rpx;
  display: inline-block;
  vertical-align: middle;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}

.author-name {
  font-size: 28rpx;
  vertical-align: middle;
  margin-left: 16rpx;
}

.data {
  float: right;
  font-size: 22rpx;
  margin-top: 22rpx;
  line-height: 48rpx;
  vertical-align: middle;
}

.data text {
  vertical-align: middle;
  margin-left: 8rpx;
  color: #9f9f9f;
}

.glance-over-img {
  height: 20rpx;
  width: 26rpx;
  vertical-align: middle;
}

.comment-img {
  margin-left: 38rpx;
  height: 20rpx;
  width: 22rpx;
  vertical-align: middle;
}